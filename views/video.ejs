<%- include('header') -%>

<header class="header">
  <h1 class="header__title"><%= video.title%></h1>
</header>
<main>
  <section class="video">
    <video controls class="video__player">
      <source src="<%= video.video %>" type="video/mp4" />
      <p>
        Your browser doesn't support HTML5 video. Here is a
        <a href="<%= video.video %>">link to the video</a> instead.
      </p>
    </video>
    <p class="video__description"><%= video.description %></p>
    <a class="video__back" href="/">Til baka</a>
  </section>
</main>

<%- include('footer') -%>
