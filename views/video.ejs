<%- include('header') -%>

<h1><%= video.title%></h1>
<video controls>
  <source src="<%= video.video %>" type="video/mp4">
  <p>Your browser doesn't support HTML5 video. Here is a <a href="rabbit320.mp4">link to the video</a> instead.</p>
</video>
<p><%= video.description %></p>

<a class="video" href="<%= video.id %>">
  <div class="video">
    <div class="video__image">
      <img class="video__image" src="<%= video.poster %>"/>
      <div class="video__duration"><%= locals.formatDuration(video.duration) %></div>
    </div>
    <div class="video__content">
      <h3 class="video__title"><%= video.title %></h3>
      <p class="video__age"><%= locals.formatAge(video.created) %></p>
    </div>
  </div>
</a>

<%- include('footer') -%>
