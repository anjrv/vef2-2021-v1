<%- include('header') -%>

<header class="header">
  <h1 class="header__title">Fræðslumyndbandaleigan</h1>
</header>
<main class="videos">
  <% categories.forEach((category) => { %>
  <h2 class="videos__title"><%= category.title %></h2>
  <div class="videos__row">
    <% category.videos.forEach((video) => { %>
    <div class="videos__col">
      <a href="/<%= videos[video-1].id %>">
        <div class="video">
          <div class="video__image">
            <img class="video__img" src="<%= videos[video-1].poster %>" />
            <div class="video__duration">
              <%= formatDuration(videos[video-1].duration) %>
            </div>
          </div>
          <div class="video__content">
            <h3 class="video__title"><%= videos[video-1].title %></h3>
            <p class="video__age"><%= formatAge(videos[video-1].created) %></p>
          </div>
        </div>
      </a>
    </div>
    <% }) %>
  </div>
  <% }) %>
</main>

<%- include('footer') -%>
